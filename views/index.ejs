<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News Intel</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="bg-blur bg-blur-a"></div>
    <div class="bg-blur bg-blur-b"></div>

    <header class="top glass">
      <div>
        <h1>News Intel</h1>
        <p class="sub">由神经现实呈现</p>
      </div>
      <div class="actions">
        <a class="icon-btn" href="/?refresh=1" title="刷新" aria-label="刷新">↻</a>
      </div>
    </header>

    <details class="nav-menu glass">
      <summary>☰ 栏目菜单</summary>
      <div class="menu-list">
        <% categories.forEach((cat) => { %>
        <a href="#<%= cat.id %>"><%= cat.zhName || cat.name %></a>
        <% }) %>
      </div>
    </details>

    <main>
      <% categories.forEach((cat) => { %>
      <section class="panel glass" id="<%= cat.id %>">
        <div class="panel-head">
          <div>
            <h2><%= cat.zhName || cat.name %></h2>
            <p class="desc"><%= cat.zhDescription || cat.description %></p>
          </div>
          <div class="meta-wrap">
            <span class="count"><%= cat.items.length %> 条</span>
            <span class="meta"><%= new Date(cat.updatedAt).toLocaleString('zh-CN') %></span>
          </div>
        </div>

        <ul class="items">
          <% cat.items.forEach((item) => { %>
          <li class="item <%= item.error ? 'error' : '' %>">
            <a class="title" href="<%= item.link %>" target="_blank" rel="noreferrer"><%= item.titleZh || item.title %></a>
            <% if (item.title && item.titleZh && item.title !== item.titleZh) { %>
            <p class="title-original"><%= item.title %></p>
            <% } %>

            <div class="tags">
              <% (item.tags || []).forEach((tag) => { %>
              <span class="tag"><%= tag %></span>
              <% }) %>
            </div>

            <p class="summary"><%= item.summary || '暂无摘要' %></p>

            <div class="row">
              <span>来源：<%= item.source %></span>
              <% if (item.publishedAt) { %>
              <span><%= new Date(item.publishedAt).toLocaleString('zh-CN') %></span>
              <% } else { %>
              <span>时间未知</span>
              <% } %>
            </div>
          </li>
          <% }) %>
        </ul>
      </section>
      <% }) %>
    </main>

    <footer class="footer glass">
      <div class="brand">© Powered by noetex.ai</div>
      <div class="socials" aria-label="社交媒体链接">
        <a class="social" href="https://mp.weixin.qq.com/s/BgZCDRICPzGcvI3ITpFgSg" target="_blank" rel="noreferrer" title="微信">微</a>
        <a class="social" href="https://www.xiaohongshu.com/user/profile/632f3c94000000002303e0a9" target="_blank" rel="noreferrer" title="小红书">红</a>
        <a class="social" href="https://www.zhihu.com/people/cc291b8ee46f03fbf5aad34797982ac1" target="_blank" rel="noreferrer" title="知乎">知</a>
        <a class="social" href="https://www.douban.com/people/neureality/?_i=1983129EZtlAvB" target="_blank" rel="noreferrer" title="豆瓣">豆</a>
      </div>
    </footer>
  </body>
</html>
