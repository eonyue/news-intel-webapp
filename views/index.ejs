<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sci&Tech News Hub</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="bg-blur bg-blur-a"></div>
    <div class="bg-blur bg-blur-b"></div>

    <% const catEmoji = { media: '📰', research: '🔬', trends: '📈' }; %>

    <header class="top glass">
      <div>
        <h1>Sci&Tech News Hub</h1>
        <p class="sub">每日科技简报 · 由神经现实呈现</p>
        <p class="sub2">神经科学，人工智能，生命科学</p>
      </div>
      <div class="actions">
        <a class="icon-btn" href="/consciousness" title="意识简报" aria-label="意识简报">🧠</a>
        <a class="icon-btn wechat-btn" href="https://mp.weixin.qq.com/s/BgZCDRICPzGcvI3ITpFgSg" target="_blank" rel="noreferrer" title="WeChat" aria-label="WeChat">微</a>
      </div>
    </header>

    <details class="nav-menu glass">
      <summary>☰ 栏目</summary>
      <div class="menu-list">
        <a href="#consciousness-home">🧠 意识简报</a>
        <% categories.forEach((cat) => { %>
        <a href="#<%= cat.id %>"><%= catEmoji[cat.id] || '🗂️' %> <%= cat.zhName || cat.name %></a>
        <% }) %>
      </div>
    </details>

    <main>
      <section class="panel glass" id="consciousness-home">
        <div class="panel-head">
          <div>
            <h2>🧠 意识简报</h2>
            <p class="desc">每日同步 · <%= consciousness?.date || '' %></p>
          </div>
          <div class="meta-wrap">
            <span class="count"><%= (consciousness?.items || []).length %> 条</span>
            <span class="meta"><%= consciousness?.updatedAt ? new Date(consciousness.updatedAt).toLocaleString('zh-CN') : '同步时间未知' %></span>
          </div>
        </div>

        <ul class="items">
          <% (consciousness?.items || []).slice(0, 6).forEach((item) => { %>
          <li class="item">
            <a class="title" href="<%= item.link %>" target="_blank" rel="noreferrer"><%= item.title %></a>
            <p class="summary"><%= item.summary || '暂无摘要' %></p>
            <div class="row">
              <span>来源：<em><%= item.source || '未知来源' %></em></span>
            </div>
          </li>
          <% }) %>
        </ul>

        <div class="trend-box">
          <strong>今日趋势观察：</strong>
          <p><%= consciousness?.trendObservation || '暂无趋势观察。' %></p>
          <p class="more-link-wrap"><a class="more-link" href="/consciousness">查看完整意识简报 →</a></p>
        </div>
      </section>

      <% categories.forEach((cat) => { %>
      <section class="panel glass" id="<%= cat.id %>">
        <div class="panel-head">
          <div>
            <h2><%= catEmoji[cat.id] || '🗂️' %> <%= cat.zhName || cat.name %></h2>
            <p class="desc"><%= cat.zhDescription || cat.description %></p>
          </div>
          <div class="meta-wrap">
            <span class="count"><%= cat.items.length %> 条</span>
            <span class="meta"><%= new Date(cat.updatedAt).toLocaleString('zh-CN') %></span>
          </div>
        </div>

        <ul class="items">
          <% cat.items.forEach((item) => { %>
          <li class="item <%= item.error ? 'error' : '' %>">
            <a class="title" href="<%= item.link %>" target="_blank" rel="noreferrer"><%= item.titleZh || item.title %></a>
            <% if (item.title && item.titleZh && item.title !== item.titleZh) { %>
            <p class="title-original"><%= item.title %></p>
            <% } %>

            <div class="tags">
              <% (item.tags || []).forEach((tag) => { %>
              <span class="tag"><%= tag %></span>
              <% }) %>
            </div>

            <p class="summary"><%= item.summary || '暂无摘要' %></p>

            <div class="row">
              <span>来源：<%= item.source %></span>
              <% if (item.publishedAt) { %>
              <span><%= new Date(item.publishedAt).toLocaleString('zh-CN') %></span>
              <% } else { %>
              <span>时间未知</span>
              <% } %>
            </div>
          </li>
          <% }) %>
        </ul>
      </section>
      <% }) %>
    </main>

    <footer class="footer glass">
      <div class="brand">© Powered by noetex.ai</div>
      <div class="socials" aria-label="社交媒体链接">
        <a class="social" href="https://mp.weixin.qq.com/s/BgZCDRICPzGcvI3ITpFgSg" target="_blank" rel="noreferrer" title="微信">微</a>
        <a class="social" href="https://www.xiaohongshu.com/user/profile/632f3c94000000002303e0a9" target="_blank" rel="noreferrer" title="小红书">红</a>
        <a class="social" href="https://www.zhihu.com/people/cc291b8ee46f03fbf5aad34797982ac1" target="_blank" rel="noreferrer" title="知乎">知</a>
        <a class="social" href="https://www.douban.com/people/neureality/?_i=1983129EZtlAvB" target="_blank" rel="noreferrer" title="豆瓣">豆</a>
      </div>
    </footer>
  </body>
</html>
